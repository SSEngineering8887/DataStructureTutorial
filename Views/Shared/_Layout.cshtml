<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top ">
      <div class="container">
          <div class="row">
              @Html.Partial("_LoginPartial")
              <ul class="nav nav-pills well-lg">
                  <li class="nav-item nav-link">@Html.ActionLink("Home", "Cards", "Home", null, new { @class = "text-white" })</li>
                  <li class="nav-item nav-link">@Html.ActionLink("About", "About", "Home", null, new { @class = "text-white" })</li>
                  <li class="nav-item nav-link">@Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "text-white" })</li>
                  <li class="nav-item nav-link">@Html.ActionLink("Store", "Details", "Store", null, new { @class = "text-white" })</li>
              </ul>
          </div>
        </div>
        <div class="navbar-header navbar-brand">
       <h5 class="font-weight-bold">Data Structures Tutorial</h5>
        </div>


    </nav>
    
    <div class="container-fluid">
        <div class="row">
           
            <div class="col-10 ml-4">
                @RenderBody()
            </div>
        </div>

    </div>

    <div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Data Structures Tutorials</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
